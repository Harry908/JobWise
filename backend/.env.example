# Environment Configuration
ENVIRONMENT=development

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./jobwise.db
DATABASE_URL_PROD=postgresql+asyncpg://username:password@localhost:5432/jobwise

# AI Service Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=8000
OPENAI_TEMPERATURE=0.7
OPENAI_REQUEST_TIMEOUT=60

# Alternative AI Models (Optional)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_SSL=false

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# API Configuration
API_V1_PREFIX=/api/v1
PROJECT_NAME=JobWise API
DEBUG=true
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100
AI_GENERATION_RATE_LIMIT=10  # per hour per user

# External Job APIs
INDEED_PUBLISHER_ID=your_indeed_publisher_id
INDEED_API_URL=https://api.indeed.com/ads/apisearch
LINKEDIN_API_KEY=your_linkedin_api_key
LINKEDIN_API_SECRET=your_linkedin_api_secret

# File Storage
UPLOAD_MAX_SIZE=10485760  # 10MB
PDF_STORAGE_PATH=./storage/pdfs
DOCUMENT_STORAGE_PATH=./storage/documents
STATIC_FILES_PATH=./static

# AWS S3 (Production)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=jobwise-documents
AWS_REGION=us-west-2

# Azure Storage (Alternative)
AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
AZURE_CONTAINER_NAME=jobwise-documents

# Email Configuration (for notifications)
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_FROM=noreply@jobwise.ai
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com
MAIL_TLS=true
MAIL_SSL=false

# Monitoring and Logging
LOG_LEVEL=INFO
SENTRY_DSN=your_sentry_dsn_here
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# Background Tasks
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/1

# PDF Generation
PDF_GENERATION_TIMEOUT=30
PDF_MAX_PAGES=5
PDF_DPI=300
WEASYPRINT_HTML_BASE_URL=http://localhost:8000

# Cache Configuration
CACHE_TTL_PROFILES=3600  # 1 hour
CACHE_TTL_JOBS=86400     # 24 hours
CACHE_TTL_DOCUMENTS=3600 # 1 hour
CACHE_TTL_GENERATIONS=600 # 10 minutes

# Performance Settings
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
HTTP_TIMEOUT=30
WORKER_PROCESSES=4

# Feature Flags
ENABLE_COVER_LETTER_GENERATION=true
ENABLE_BATCH_GENERATION=false
ENABLE_DOCUMENT_SHARING=true
ENABLE_ANALYTICS=true

# Testing Configuration
TEST_DATABASE_URL=sqlite+aiosqlite:///./test_jobwise.db
TEST_OPENAI_API_KEY=test_key_or_mock